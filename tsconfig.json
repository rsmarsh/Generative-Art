{
  "compilerOptions": {
    "outDir": "./public/",
    "baseUrl": ".",
    "paths": {
      "Components*": ["src/components*"],
      "Assets*": ["src/assets*"]
    },
    "noImplicitAny": false, // ex-js project, so switched off until all components can be converted to tsx
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "jsx": "react",
    "types": ["webpack-env", "node", "jest"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
